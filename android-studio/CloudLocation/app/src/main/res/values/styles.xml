<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.C" />

    <style name="AppTheme.NoActionBar.SignIn">
        <item name="android:windowBackground">@drawable/dl_bet</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large" />

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium" />

    <style name="TextAppearance.AppTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small" />

    <style name="TextAppearance.AppTheme.Micro" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/layer_candy_progress</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:thumb">@drawable/biaopan</item>
    </style>

</resources>
