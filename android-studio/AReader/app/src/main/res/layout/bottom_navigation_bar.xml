<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rg_bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <RadioButton
        android:id="@+id/rb_bookshelf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:button="@null"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/selector_bookshelf"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/bookshelf"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_book_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:button="@null"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/selector_book_store"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/book_store"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_book_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:button="@null"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/selector_book_category"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/book_category"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/rb_book_rank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:button="@null"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/selector_book_rank"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/book_rank"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp" />

</RadioGroup>