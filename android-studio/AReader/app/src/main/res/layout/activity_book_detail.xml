<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.lcjian.lib.areader.widget.MyScrollView
            android:id="@+id/sv_book_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/book_detail_poster_land" />

                    <include
                        layout="@layout/book_detail_poster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_book_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:lineSpacingExtra="4dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                    android:textColor="@color/colorTextBlack" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:id="@+id/ll_book_last_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tv_book_last_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_catalog"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_catalog"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/colorTextBlack" />

                    <TextView
                        android:id="@+id/tv_book_status_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/ic_arrow_right"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/shape_indicator"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/shape_indicator"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/all_like"
                    android:textAppearance="@style/TextAppearance.AppTheme"
                    android:textColor="@color/colorTextBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_book_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/shape_indicator"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/shape_indicator"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/similar_book"
                    android:textAppearance="@style/TextAppearance.AppTheme"
                    android:textColor="@color/colorTextBlack" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/fl_book_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_book_8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <include layout="@layout/book_grid_item" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </com.lcjian.lib.areader.widget.MyScrollView>

        <include
            android:id="@+id/rl_top_bar"
            layout="@layout/top_navigation_bar"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_to_bookshelf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/add_to_bookshelf"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_read_now"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/read_now"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>