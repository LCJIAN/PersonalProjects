<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large" />

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium" />

    <style name="TextAppearance.AppTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small" />

    <style name="TextAppearance.AppTheme.Micro" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SlidingDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sliding_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/sliding_dialog_exit</item>
    </style>

    <style name="Theme.Sliding.Dialog" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/SlidingDialogAnimation</item>
    </style>
</resources>
