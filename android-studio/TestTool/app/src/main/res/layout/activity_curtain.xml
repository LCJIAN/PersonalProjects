<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigation_top_bar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_join_in_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_in_the_network" />

        <Button
            android:id="@+id/btn_leave_from_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_from_network" />

        <Button
            android:id="@+id/btn_switch_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_on" />

        <Button
            android:id="@+id/btn_switch_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_off" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause" />

    </LinearLayout>
</LinearLayout>