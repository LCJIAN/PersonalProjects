<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigation_top_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary" />

            <com.winside.lighting.widget.RatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_top_bg"
                app:ratio="0.2315" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/default_avatar_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/user_name"
                    android:textAppearance="@style/TextAppearance.AppTheme"
                    android:textColor="@android:color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:layout_marginBottom="36dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_go_to_modify_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:background="?selectableItemBackground"
                            android:drawableStart="@drawable/ic_lock"
                            android:drawableEnd="@drawable/ic_arrow_end"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="@string/modify_pwd"
                            android:textAppearance="@style/TextAppearance.AppTheme.Small"
                            android:textColor="#ff040404" />

                        <TextView
                            android:id="@+id/tv_go_to_message_notification"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:background="?selectableItemBackground"
                            android:drawableStart="@drawable/ic_message"
                            android:drawableEnd="@drawable/ic_arrow_end"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="@string/message_notification"
                            android:textAppearance="@style/TextAppearance.AppTheme.Small"
                            android:textColor="#ff040404" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/tv_go_to_check_app_version"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="?selectableItemBackground"
                                android:drawableStart="@drawable/ic_update"
                                android:drawableEnd="@drawable/ic_arrow_end"
                                android:drawablePadding="16dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="24dp"
                                android:paddingRight="24dp"
                                android:text="@string/check_app_version"
                                android:textAppearance="@style/TextAppearance.AppTheme.Small"
                                android:textColor="#ff040404" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="40dp"
                                android:text="@string/latest_version_already"
                                android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                                android:textColor="#9fa0a1" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tv_go_to_about_us"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:background="?selectableItemBackground"
                            android:drawableStart="@drawable/ic_chat"
                            android:drawableEnd="@drawable/ic_arrow_end"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="@string/about_us"
                            android:textAppearance="@style/TextAppearance.AppTheme.Small"
                            android:textColor="#ff040404" />

                        <TextView
                            android:id="@+id/tv_go_to_sign_out"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="?selectableItemBackground"
                            android:drawableStart="@drawable/ic_sign_out"
                            android:drawableEnd="@drawable/ic_arrow_end"
                            android:drawablePadding="16dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="24dp"
                            android:paddingRight="24dp"
                            android:text="@string/sign_out"
                            android:textAppearance="@style/TextAppearance.AppTheme.Small"
                            android:textColor="#ff040404" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>