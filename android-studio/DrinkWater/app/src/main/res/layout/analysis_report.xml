<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="@string/c4"
        android:textAppearance="@style/TextAppearance.AppTheme.Medium"
        android:textColor="@color/colorTextBlack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/shape_dot_1"
            android:drawableLeft="@drawable/shape_dot_1"
            android:drawablePadding="12dp"
            android:text="@string/ic"
            android:textAppearance="@style/TextAppearance.AppTheme.Micro"
            android:textColor="@color/colorTextGray" />

        <TextView
            android:id="@+id/tv_weekly_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@color/colorAccent"
            tools:text="0 ml / day" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="?android:listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/shape_dot_2"
            android:drawableLeft="@drawable/shape_dot_2"
            android:drawablePadding="12dp"
            android:text="@string/en"
            android:textAppearance="@style/TextAppearance.AppTheme.Micro"
            android:textColor="@color/colorTextGray" />

        <TextView
            android:id="@+id/tv_monthly_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@color/colorAccent"
            tools:text="0 ml / day" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="?android:listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/shape_dot_3"
            android:drawableLeft="@drawable/shape_dot_3"
            android:drawablePadding="12dp"
            android:text="@string/ab"
            android:textAppearance="@style/TextAppearance.AppTheme.Micro"
            android:textColor="@color/colorTextGray" />

        <TextView
            android:id="@+id/tv_average_completion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@color/colorAccent"
            tools:text="0%" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="?android:listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/shape_dot_4"
            android:drawableLeft="@drawable/shape_dot_4"
            android:drawablePadding="12dp"
            android:text="@string/c1"
            android:textAppearance="@style/TextAppearance.AppTheme.Micro"
            android:textColor="@color/colorTextGray" />

        <TextView
            android:id="@+id/tv_drink_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppTheme"
            android:textColor="@color/colorAccent"
            tools:text="1 次/天" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="?android:listDivider" />
</LinearLayout>