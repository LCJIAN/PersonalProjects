<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_get_up"
        android:layout_width="135dp"
        android:layout_height="306dp"
        app:srcCompat="@drawable/ic_get_up_time_male" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/pv_get_up_time_hour"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        app:npv_DividerColor="@color/colorDivider"
        app:npv_TextColorNormal="@color/colorTextLight"
        app:npv_TextColorSelected="@color/colorAccent"
        app:npv_TextSizeNormal="32sp"
        app:npv_TextSizeSelected="48sp" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/pv_get_up_time_colon"
        android:layout_width="8dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        app:npv_DividerColor="@color/colorDivider"
        app:npv_TextColorNormal="@color/colorTextLight"
        app:npv_TextColorSelected="@color/colorAccent"
        app:npv_TextSizeNormal="32sp"
        app:npv_TextSizeSelected="48sp" />

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/pv_get_up_time_minute"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical"
        app:npv_DividerColor="@color/colorDivider"
        app:npv_TextColorNormal="@color/colorTextLight"
        app:npv_TextColorSelected="@color/colorAccent"
        app:npv_TextSizeNormal="32sp"
        app:npv_TextSizeSelected="48sp" />

</LinearLayout>
