<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_change_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/e1"
        android:textAppearance="@style/TextAppearance.AppTheme.Medium"
        android:textColor="@color/colorTextBlack" />

    <ImageView
        android:id="@+id/iv_cup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/ic_cup_200_ml">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_percent_25"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_blue_circle_bg"
                android:gravity="center"
                android:text="1/4"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_percent_25_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                android:textColor="@color/colorAccent"
                tools:text="50 ml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_percent_50"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_white_circle_stroke_bg"
                android:gravity="center"
                android:text="2/4"
                android:textColor="@color/colorTextGray" />

            <TextView
                android:id="@+id/tv_percent_50_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                android:textColor="@color/colorTextGray"
                tools:text="100 ml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_percent_75"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_white_circle_stroke_bg"
                android:gravity="center"
                android:text="3/4"
                android:textColor="@color/colorTextGray" />

            <TextView
                android:id="@+id/tv_percent_75_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                android:textColor="@color/colorTextGray"
                tools:text="150 ml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_percent_100"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/shape_white_circle_stroke_bg"
                android:gravity="center"
                android:text="4/4"
                android:textColor="@color/colorTextGray" />

            <TextView
                android:id="@+id/tv_percent_100_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.AppTheme.Micro"
                android:textColor="@color/colorTextGray"
                tools:text="200 ml" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="?buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/at" />

        <Button
            android:id="@+id/btn_ok"
            style="?buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/f4" />
    </LinearLayout>
</LinearLayout>