<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/navigation_top_bar" />

    <TextView
        android:id="@+id/tv_go_to_switch_server"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/switch_server"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="#ff535353" />

    <TextView
        android:id="@+id/tv_go_to_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/modify_pwd"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="#ff535353" />

    <TextView
        android:id="@+id/tv_go_to_sign_out"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/sign_out"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="#ff535353" />
</LinearLayout>