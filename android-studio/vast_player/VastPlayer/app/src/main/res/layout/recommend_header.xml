<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.lcjian.lib.widget.RatioLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio="0.5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lcjian.lib.viewpager.AutoViewPager
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.lcjian.lib.viewpager.AutoViewPager>

            <com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/vpi_banner"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                app:stl_clickable="false"
                app:stl_customTabTextLayoutId="@layout/custom_tab_circle"
                app:stl_dividerColor="@android:color/transparent"
                app:stl_dividerThickness="0dp"
                app:stl_indicatorColor="@color/accent"
                app:stl_indicatorCornerRadius="5dp"
                app:stl_indicatorGravity="center"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorThickness="10dp"
                app:stl_underlineColor="@android:color/transparent"
                app:stl_underlineThickness="0dp">

            </com.ogaclejapan.smarttablayout.SmartTabLayout>
        </FrameLayout>
    </com.lcjian.lib.widget.RatioLayout>

    <include layout="@layout/recommend_header_category" />
</LinearLayout>