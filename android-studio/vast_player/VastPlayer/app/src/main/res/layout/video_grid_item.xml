<?xml version="1.0" encoding="utf-8"?>
<com.lcjian.lib.widget.RatioLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200">

        <ImageView
            android:id="@+id/iv_video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:gravity="end"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:fontFamily="roboto"
            app:robotoTextWeight="bold"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="middle"
            android:gravity="start"
            android:padding="8dp"
            android:singleLine="true"
            android:textAppearance="?android:textAppearance"
            android:textColor="@android:color/white"
            app:fontFamily="roboto"
            tools:ignore="MissingPrefix" />

        <CheckBox
            android:id="@+id/chb_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            app:buttonTint="@color/selector_video_checkable_tint"
            tools:ignore="MissingPrefix" />
    </FrameLayout>

</com.lcjian.lib.widget.RatioLayout>