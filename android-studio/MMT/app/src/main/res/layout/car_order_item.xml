<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_card_bg">

    <TextView
        android:id="@+id/tv_car_order_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="分车运单号：121212121212" />

    <TextView
        android:id="@+id/tv_car_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="已下货" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_no" />

    <TextView
        android:id="@+id/tv_car_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintStart_toStartOf="@+id/tv_car_order_no"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:text="单价：XXXXX元" />

    <TextView
        android:id="@+id/tv_car_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_car_order_price"
        app:layout_constraintEnd_toEndOf="@+id/tv_car_order_status"
        app:layout_constraintTop_toTopOf="@+id/tv_car_order_price"
        tools:text="数量：XXXXX" />

    <TextView
        android:id="@+id/tv_car_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintStart_toStartOf="@+id/tv_car_order_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_price"
        tools:text="运费：XXXX元" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_amount" />

    <TextView
        android:id="@+id/tv_car_order_car_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintStart_toStartOf="@+id/tv_car_order_amount"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        tools:text="运输车辆车牌：渝AHD1234" />

    <TextView
        android:id="@+id/tv_car_order_car_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_car_order_car_no"
        app:layout_constraintEnd_toEndOf="@+id/tv_car_order_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_car_order_car_no"
        tools:text="驾驶员：XXX" />

    <TextView
        android:id="@+id/tv_car_order_car_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintStart_toStartOf="@+id/tv_car_order_car_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_car_no"
        tools:text="联系电话：12312312312" />

    <TextView
        android:id="@+id/tv_car_order_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintBottom_toBottomOf="@+id/tv_car_order_car_phone"
        app:layout_constraintEnd_toEndOf="@+id/tv_car_order_car_driver"
        app:layout_constraintTop_toTopOf="@+id/tv_car_order_car_phone"
        tools:text="单位：重庆市科技有限公司" />

    <TextView
        android:id="@+id/tv_car_order_unload_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextLightGray"
        app:layout_constraintStart_toStartOf="@+id/tv_car_order_car_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_car_phone"
        tools:text="预计下货时间：2018.09.12   12:30" />

    <TextView
        android:id="@+id/tv_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_delete_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/upload_pound"
        android:textColor="#ffc3382a"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_modify"
        app:layout_constraintEnd_toStartOf="@+id/tv_modify"
        app:layout_constraintTop_toTopOf="@+id/tv_modify" />

    <TextView
        android:id="@+id/tv_set_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_delete_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/set_out"
        android:textColor="#ffc3382a"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_view_detail"
        app:layout_constraintEnd_toStartOf="@+id/tv_view_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_view_detail" />

    <TextView
        android:id="@+id/tv_view_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_quote_not_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/detail"
        android:textColor="#ffd89f67"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_car_order_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_car_order_unload_time" />

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_quote_not_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/modify"
        android:textColor="#ffd89f67"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_set_out"
        app:layout_constraintEnd_toStartOf="@+id/tv_set_out"
        app:layout_constraintTop_toTopOf="@+id/tv_set_out" />

    <TextView
        android:id="@+id/tv_launch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_quote_not_bg"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="@string/launch_loading"
        android:textColor="#ffd89f67"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_upload"
        app:layout_constraintEnd_toStartOf="@+id/tv_upload"
        app:layout_constraintTop_toTopOf="@+id/tv_upload" />
</androidx.constraintlayout.widget.ConstraintLayout>