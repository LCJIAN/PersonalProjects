<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/nav_top_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_product_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:text="@string/product_info"
            android:textColor="@color/colorTextBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_info_label" />

        <TextView
            android:id="@+id/tv_order_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/order_no"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_product_info_label"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_no_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_product_name"
            app:layout_constraintTop_toTopOf="@+id/tv_order_no_label"
            tools:text="13131131345466" />

        <TextView
            android:id="@+id/tv_product_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_name_2"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_order_no_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_no_label" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_product_name_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_commission"
            app:layout_constraintTop_toTopOf="@+id/tv_product_name_label"
            tools:text="某某某" />

        <TextView
            android:id="@+id/tv_commission_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/commission"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_product_name_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name_label" />

        <TextView
            android:id="@+id/tv_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_commission_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_quantity"
            app:layout_constraintTop_toTopOf="@+id/tv_commission_label"
            tools:text="¥  3500" />

        <TextView
            android:id="@+id/tv_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/quantity"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_commission_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_commission_label" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quantity_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_total_freight"
            app:layout_constraintTop_toTopOf="@+id/tv_quantity_label"
            tools:text="35吨" />

        <TextView
            android:id="@+id/tv_total_freight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/total_freight"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_quantity_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_quantity_label" />

        <TextView
            android:id="@+id/tv_total_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total_freight_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_order_create_date"
            app:layout_constraintTop_toTopOf="@+id/tv_total_freight_label"
            tools:text="¥  3500" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_freight_label" />

        <TextView
            android:id="@+id/tv_order_create_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/order_create_date"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_total_freight_label"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <TextView
            android:id="@+id/tv_order_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_create_date_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_predicate_load_time"
            app:layout_constraintTop_toTopOf="@+id/tv_order_create_date_label"
            tools:text="2015-02-26 14:26:34" />

        <TextView
            android:id="@+id/tv_predicate_load_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/predicate_load_time"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintStart_toStartOf="@+id/tv_order_create_date_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_create_date_label" />

        <TextView
            android:id="@+id/tv_predicate_load_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_predicate_load_time_label"
            app:layout_constraintEnd_toEndOf="@+id/tv_predicate_unload_time"
            app:layout_constraintTop_toTopOf="@+id/tv_predicate_load_time_label"
            tools:text="2015-02-26 14:26:34" />

        <TextView
            android:id="@+id/tv_predicate_unload_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@string/predicate_unload_time"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_predicate_load_time_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_predicate_load_time_label" />

        <TextView
            android:id="@+id/tv_predicate_unload_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:textColor="@color/colorTextLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/tv_predicate_unload_time_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_predicate_unload_time_label"
            tools:text="2015-02-26 14:26:34" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>