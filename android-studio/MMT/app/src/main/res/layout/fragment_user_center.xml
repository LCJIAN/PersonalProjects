<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_user_header_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="昵称" />

                <ImageButton
                    android:id="@+id/btn_go_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:padding="18dp"
                    android:src="@drawable/ic_setting" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_balance"
                        android:textColor="@color/fifty_percent_transparency_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="4444.00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_type"
                        android:textColor="@color/fifty_percent_transparency_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="@string/personal_account"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bond_balance"
                    android:textColor="@color/fifty_percent_transparency_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_bond_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:text="1000.00" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_my_bankcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:drawableTop="@drawable/ic_bankcard"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/my_bank_card"
                android:textColor="@color/colorTextBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_recharge_bond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:drawableTop="@drawable/ic_recharge_bond"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/bond_recharge"
                android:textColor="@color/colorTextBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:drawableTop="@drawable/ic_withdraw"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/withdraw"
                android:textColor="@color/colorTextBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:drawableTop="@drawable/ic_recharge"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@string/recharge"
                android:textColor="@color/colorTextBlack"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_commission_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_commission"
            android:drawableLeft="@drawable/ic_commission"
            android:drawableEnd="@drawable/chevron_right"
            android:drawableRight="@drawable/chevron_right"
            android:drawablePadding="8dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/commission_info"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_invoice_manage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_invoice"
            android:drawableLeft="@drawable/ic_invoice"
            android:drawableEnd="@drawable/chevron_right"
            android:drawableRight="@drawable/chevron_right"
            android:drawablePadding="8dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/invoice_manage"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_feedback"
            android:drawableLeft="@drawable/ic_feedback"
            android:drawableEnd="@drawable/chevron_right"
            android:drawableRight="@drawable/chevron_right"
            android:drawablePadding="8dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/feedback"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:drawableStart="@drawable/ic_record"
            android:drawableLeft="@drawable/ic_record"
            android:drawableEnd="@drawable/chevron_right"
            android:drawableRight="@drawable/chevron_right"
            android:drawablePadding="8dp"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/in_out_records"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>