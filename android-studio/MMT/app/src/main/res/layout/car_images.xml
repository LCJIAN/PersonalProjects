<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_car_head_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_car_side_one_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/def_img" />

    <ImageView
        android:id="@+id/iv_car_side_one_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_car_head_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_car_head_image"
        app:layout_constraintTop_toTopOf="@+id/iv_car_head_image"
        app:srcCompat="@drawable/def_img" />

    <TextView
        android:id="@+id/textView115"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="车辆头部"
        app:layout_constraintEnd_toEndOf="@+id/iv_car_head_image"
        app:layout_constraintStart_toStartOf="@+id/iv_car_head_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_car_head_image" />

    <TextView
        android:id="@+id/textView116"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="车辆侧面"
        app:layout_constraintEnd_toEndOf="@+id/iv_car_side_one_image"
        app:layout_constraintStart_toStartOf="@+id/iv_car_side_one_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_car_side_one_image" />

    <ImageView
        android:id="@+id/iv_car_side_two_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/textView115"
        app:layout_constraintStart_toStartOf="@+id/textView115"
        app:layout_constraintTop_toBottomOf="@+id/textView115"
        app:srcCompat="@drawable/def_img" />

    <ImageView
        android:id="@+id/iv_car_tails_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/textView116"
        app:layout_constraintStart_toStartOf="@+id/textView116"
        app:layout_constraintTop_toBottomOf="@+id/textView116"
        app:srcCompat="@drawable/def_img" />

    <TextView
        android:id="@+id/textView117"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="车辆侧面"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_car_side_two_image"
        app:layout_constraintStart_toStartOf="@+id/iv_car_side_two_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_car_side_two_image" />

    <TextView
        android:id="@+id/textView118"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="车辆尾部"
        app:layout_constraintEnd_toEndOf="@+id/iv_car_tails_image"
        app:layout_constraintStart_toStartOf="@+id/iv_car_tails_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_car_tails_image" />
</androidx.constraintlayout.widget.ConstraintLayout>