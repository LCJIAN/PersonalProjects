<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:listDivider">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.C" />

    <style name="AppTheme.NoActionBar.SignIn">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Recharge">
        <item name="colorAccent">@color/colorTextBlack</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Large" />

    <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium" />

    <style name="TextAppearance.AppTheme" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Small" parent="TextAppearance.AppCompat.Small" />

    <style name="TextAppearance.AppTheme.Micro" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
