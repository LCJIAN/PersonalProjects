<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/pv_group"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="32dp"
        app:npv_DividerColor="@color/colorDivider"
        app:npv_TextColorNormal="@color/colorTextLight"
        app:npv_TextColorSelected="@color/colorAccent"
        app:npv_TextSizeNormal="32sp"
        app:npv_TextSizeSelected="48sp" />

    <View
        android:background="?android:windowBackground"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#ff333333"
        android:textAppearance="@style/TextAppearance.AppTheme"
        android:background="?selectableItemBackground"
        android:layout_height="48dp" />
</LinearLayout>